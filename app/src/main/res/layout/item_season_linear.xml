<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thumb_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/backdropFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/iv_season"
                android:layout_width="144dp"
                android:layout_height="81dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/no_thumb" />

            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="81dp"
                android:background="@drawable/dark_tint" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_season"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/open_sans_bold"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_episode"
        app:layout_constraintEnd_toEndOf="@+id/thumb_card"
        app:layout_constraintStart_toStartOf="@+id/thumb_card"
        app:layout_constraintTop_toBottomOf="@+id/thumb_card"
        tools:text="Season 1" />

    <TextView
        android:id="@+id/tv_episode"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/open_sans_light"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/textColor_74"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/thumb_card"
        app:layout_constraintEnd_toEndOf="@+id/tv_season"
        app:layout_constraintStart_toStartOf="@+id/tv_season"
        app:layout_constraintTop_toBottomOf="@+id/tv_season"
        tools:text="13 episodes" />

</androidx.constraintlayout.widget.ConstraintLayout>

