<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="16dp"
            app:elevation="0dp"
            app:layout_scrollFlags="noScroll">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seasons_menu"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:insetTop="4dp"
                android:insetBottom="2dp"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:textColor="@color/textColor_74"
                android:textSize="14sp"
                app:backgroundTint="@color/transparent"
                app:cornerRadius="16dp"
                app:elevation="0dp"
                app:icon="@drawable/ic_arrow_down_24"
                app:iconGravity="end"
                app:iconTint="@color/textColor_74"
                app:layout_constraintEnd_toStartOf="@+id/filter_eps"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Season 1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filter_eps"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/seasons_menu"
                android:layout_toEndOf="@id/seasons_menu"
                android:insetTop="4dp"
                android:insetBottom="2dp"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:textColor="@color/textColor_74"
                android:textSize="14sp"
                app:backgroundTint="@color/transparent"
                app:cornerRadius="16dp"
                app:elevation="0dp"
                app:icon="@drawable/ic_arrow_down_24"
                app:iconGravity="end"
                app:iconTint="@color/textColor_74"
                app:layout_constraintBottom_toBottomOf="@+id/seasons_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/seasons_menu"
                app:layout_constraintTop_toTopOf="@+id/seasons_menu"
                tools:text="Newest" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_episodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seasons_menu"
        android:layout_gravity="center|top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/seasons_menu"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_episode"
        tools:spanCount="2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry_episodes"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/retry"
        android:textColor="@color/colorAccent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="#2898f0"
        tools:visibility="invisible" />


    <ProgressBar
        android:id="@+id/pb_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:indeterminateTint="#2898f0"
        tools:visibility="invisible" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
