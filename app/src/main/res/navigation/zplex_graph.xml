<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="zechs.zplex.ui.fragment.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="zechs.zplex.ui.fragment.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/myShowsFragment"
        android:name="zechs.zplex.ui.fragment.myshows.MyShowsFragment"
        android:label="My shows"
        tools:layout="@layout/fragment_my_shows">
        <action
            android:id="@+id/action_myShowsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="zechs.zplex.ui.fragment.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about">
        <action
            android:id="@+id/action_aboutFragment_to_bigImageFragment"
            app:destination="@id/bigImageFragment" />
    </fragment>

    <fragment
        android:id="@+id/bigImageFragment"
        android:name="zechs.zplex.ui.fragment.image.BigImageFragment"
        android:label="BigImageFragment"
        tools:layout="@layout/fragment_big_image" />
</navigation>