<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="popupMenuBackground">@drawable/popup_menu_bg</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="AppTheme.About" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MenuTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:actionMenuTextColor">@color/textColor</item>
        <item name="android:backgroundTint">@color/cardColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorControlNormal">@color/textColor</item>
    </style>

    <style name="titleTextAppearance">
        <item name="android:textColor">@color/textColor_87</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="seasonsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Widget.NewAppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.NewAppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text
        </item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textColor_87</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.NewAppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:navigationBarColor">@android:color/black</item>

    </style>

    <style name="ThemeOverlay.ZPlex.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#000</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconTint">@color/icon_tint_selector</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>