<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.About" parent="AppTheme.Home">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MenuTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:actionMenuTextColor">@color/textColor</item>
        <item name="android:backgroundTint">@color/cardColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="titleTextAppearance">
        <item name="android:textColor">@color/textColor_87</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="seasonsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>